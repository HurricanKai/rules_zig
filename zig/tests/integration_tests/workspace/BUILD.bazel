load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@rules_zig//zig:defs.bzl", "zig_binary", "zig_test")

platform(
    name = "aarch64-linux",
    constraint_values = [
        "@platforms//os:linux",
        "@platforms//cpu:aarch64",
    ],
)

# TODO[AH] Test another operating system

zig_binary(
    name = "binary",
    main = "main.zig",
)

zig_test(
    name = "test-succeeds",
    main = "test-succeeds.zig",
)

zig_test(
    name = "test-fails",
    main = "test-fails.zig",
)

zig_binary(
    name = "print_build_mode",
    main = "print_build_mode.zig",
)

genrule(
    name = "exec_build_mode",
    outs = ["exec_build_mode.out"],
    cmd = "$(execpath :print_build_mode) > $(OUTS)",
    tools = [":print_build_mode"],
)

bzl_library(
    name = "zig_version",
    srcs = ["zig_version.bzl"],
    visibility = ["//visibility:public"],
    deps = ["@rules_zig//zig/private:versions"],
)
