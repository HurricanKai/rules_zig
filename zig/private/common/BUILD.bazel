load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

bzl_library(
    name = "zig_cache",
    srcs = ["zig_cache.bzl"],
    visibility = ["//zig:__subpackages__"],
    deps = ["@bazel_skylib//lib:paths"],
)

bzl_library(
    name = "zig_lib_dir",
    srcs = ["zig_lib_dir.bzl"],
    visibility = ["//zig:__subpackages__"],
    deps = ["@bazel_skylib//lib:paths"],
)

bzl_library(
    name = "zig_build",
    srcs = ["zig_build.bzl"],
    visibility = ["//zig:__subpackages__"],
    deps = [
        ":cdeps",
        ":csrcs",
        ":data",
        ":filetypes",
        ":linker_script",
        ":zig_cache",
        ":zig_lib_dir",
        ":zig_target_triple",
        "//zig/private/providers:zig_package_info",
        "//zig/private/providers:zig_settings_info",
        "//zig/private/providers:zig_target_info",
    ],
)

bzl_library(
    name = "cdeps",
    srcs = ["cdeps.bzl"],
    visibility = ["//zig:__subpackages__"],
    deps = ["@bazel_skylib//lib:paths"],
)

bzl_library(
    name = "csrcs",
    srcs = ["csrcs.bzl"],
    visibility = ["//zig:__subpackages__"],
)

bzl_library(
    name = "data",
    srcs = ["data.bzl"],
    visibility = ["//zig:__subpackages__"],
)

bzl_library(
    name = "filetypes",
    srcs = ["filetypes.bzl"],
    visibility = ["//zig:__subpackages__"],
)

bzl_library(
    name = "linker_script",
    srcs = ["linker_script.bzl"],
    visibility = ["//zig:__subpackages__"],
)

bzl_library(
    name = "zig_target_triple",
    srcs = ["zig_target_triple.bzl"],
    visibility = ["//zig:__subpackages__"],
)

# Execute `bazel run //util:update_filegroups` to update this target.
filegroup(
    name = "all_files",
    srcs = [
        ":BUILD.bazel",
        ":cdeps.bzl",
        ":csrcs.bzl",
        ":data.bzl",
        ":filetypes.bzl",
        ":linker_script.bzl",
        ":zig_build.bzl",
        ":zig_cache.bzl",
        ":zig_lib_dir.bzl",
        ":zig_target_triple.bzl",
    ],
    visibility = ["//zig/private:__pkg__"],
)
